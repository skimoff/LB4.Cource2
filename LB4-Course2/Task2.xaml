<Window x:Class="LB4_Course2.Task2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LB4_Course2"
        mc:Ignorable="d"
        Title="Task2"
        Height="450"
        Width="400"
        MinHeight="450"
        MinWidth="400"
        MaxHeight="450"
        MaxWidth="450"
        Background="AntiqueWhite"
        Loaded="Window_Loaded">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="140" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0"
                  Grid.Column="0"
                  Margin="10">
            <GroupBox.Header>
                <TextBlock Text="Автозаправка" />
            </GroupBox.Header>

            <StackPanel Orientation="Vertical">
                <Grid ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="0 5 0 0"
                               Text="Бензин" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Ціна" />

                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              Margin="0 5 0 0"
                              Height="20"
                              VerticalAlignment="Top"
                              x:Name="FuelComboBox">
                        <ComboBoxItem Content="A-95" IsSelected="True" />
                        <ComboBoxItem Content="A-92" />
                        <ComboBoxItem Content="Дизель" />
                        <ComboBoxItem Content="Газ" />
                    </ComboBox>

                    <Border Grid.Row="1"
                            Grid.Column="1"
                            Width="85"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <TextBlock Text="" 
                                   x:Name="FuelPriceTextBlock"/>
                    </Border>

                    <TextBlock Grid.Row="1"
                               Grid.Column="2"
                               Margin="5 0 0 0"
                               Text="грн" />
                </Grid>


                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Border Height="40"
                            Width="75"
                            CornerRadius="4"
                            BorderBrush="Black"
                            BorderThickness="1">
                        <StackPanel Orientation="Vertical">
                            <RadioButton x:Name="AmountRadioButton"
                                VerticalAlignment="Center"
                                Content="Кількість"
                                IsChecked="True"
                                Margin="0 0 0 7" />
                            <RadioButton
                                VerticalAlignment="Center"
                                x:Name="SumRadioButton"
                                Content="Сума" />
                        </StackPanel>
                    </Border>
                    <Grid ShowGridLines="False"
                          Margin="5 0 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="63" />
                            <ColumnDefinition Width="30" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="1"
                                Margin="0 0 0 2"
                                x:Name="AmountBorder">
                            <TextBox Text="" 
                                     x:Name="AmountTextBox"
                                     TextChanged="FuelInput_TextChanged"/>
                        </Border>
                        <Border Grid.Row="1"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="1"
                                x:Name="SumBorder">
                            <TextBox Text="" 
                                     x:Name="SumTextBox"
                                     TextChanged="FuelInput_TextChanged"
                                     IsEnabled="False"/>
                        </Border>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Margin="5 0 0 0"
                                   Text="л" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Margin="5 0 0 0"
                                   Text="грн" />
                    </Grid>

                </StackPanel>
                <GroupBox Height="100">
                    <GroupBox.Header>
                        <TextBlock Text="До сплати" />
                    </GroupBox.Header>
                    <Grid>
                        <TextBlock VerticalAlignment="Bottom"
                                   HorizontalAlignment="Right"
                                   FontSize="20"
                                   Margin="20 0 50 20"
                                   Text="0,00" 
                                   x:Name="FuelTotalTextBlock"/>
                        <TextBlock VerticalAlignment="Bottom"
                                   HorizontalAlignment="Right"
                                   FontSize="14"
                                   Margin="20"
                                   Text="грн." />
                    </Grid>
                </GroupBox>
            </StackPanel>

        </GroupBox>

        <!--Мінікафе-->
        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="10">
            <GroupBox.Header>
                <TextBlock Text="Міні-Кафе" />
            </GroupBox.Header>
            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--Вибор продукта-->
                <CheckBox Grid.Row="1"
                          Grid.Column="0"
                           Content="Хот-дог"
                           x:Name="HotDogCheckBox"
                          Checked="Cafe_Update" 
                          Unchecked="Cafe_Update"/>
                <CheckBox Grid.Row="2"
                          Grid.Column="0"
                           Content="Гамбургер"
                           x:Name="HamburgerCheckBox"
                          Checked="Cafe_Update" 
                          Unchecked="Cafe_Update"/>
                <CheckBox Grid.Row="3"
                          Grid.Column="0"
                           Content="Картопля-фрі"
                           x:Name="FriesCheckBox"
                          Checked="Cafe_Update"
                          Unchecked="Cafe_Update"/>
                <CheckBox Grid.Row="4"
                          Grid.Column="0"
                           Content="Кока-кола"
                           x:Name="CocaColaCheckBox"
                          Checked="Cafe_Update"
                          Unchecked="Cafe_Update"/>
                
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Text="Ціна"
                           HorizontalAlignment="Center"/>
                <!--Вивід ціни-->
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBlock Text="0,00"
                    x:Name="HotDogPriceTextBlock"/>
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="1"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBlock Text="0,00"
                    x:Name="HamburgerPriceTextBlock"/>
                </Border>
                <Border Grid.Row="3"
                        Grid.Column="1"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBlock Text="0,00"
                    x:Name="FriesPriceTextBlock"/>
                </Border>
                <Border Grid.Row="4"
                        Grid.Column="1"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBlock Text="0,00"
                    x:Name="CocaColaPriceTextBlock"/>
                </Border>
                
                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           Text="К-сть"
                           HorizontalAlignment="Center"/>
                <!--Введення кількості-->
                <Border Grid.Row="1"
                        Grid.Column="2"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBox Text="0"
                    x:Name="HotDogQuantityTextBox"
                    TextChanged="Cafe_Update"/>
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="2"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBox Text="0"
                    x:Name="HamburgerQuantityTextBox"
                    TextChanged="Cafe_Update"/>
                </Border>
                <Border Grid.Row="3"
                        Grid.Column="2"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBox Text="0"
                    x:Name="FriesQuantityTextBox"
                    TextChanged="Cafe_Update"/>
                </Border>
                <Border Grid.Row="4"
                        Grid.Column="2"
                        Height="20"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Margin="0 0 3 3">
                    <TextBox Text="0"
                    x:Name="CocaColaQuantityTextBox"
                    TextChanged="Cafe_Update"/>
                </Border>
                
                <GroupBox Grid.Row="5"
                          Grid.Column="0"
                          Grid.ColumnSpan="3"
                          Height="100"
                          VerticalAlignment="Bottom">
                    <GroupBox.Header>
                        <TextBlock Text="До сплати:"/>
                    </GroupBox.Header>
                    <Grid>
                        <TextBlock VerticalAlignment="Bottom"
                                   HorizontalAlignment="Right"
                                   FontSize="20"
                                   Margin="20 0 50 20"
                                   Text="0,00" 
                                   x:Name="CafeTotalTextBlock"/>
                        <TextBlock VerticalAlignment="Bottom"
                                   HorizontalAlignment="Right"
                                   FontSize="14"
                                   Margin="20"
                                   Text="грн." />
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        
        <!--Сума-->
        <GroupBox Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Margin="5">
            <GroupBox.Header>
                <TextBlock Text="ВСЬОГО до сплати"/>
            </GroupBox.Header>
            
            <Grid>
                <Button Width="150"
                        Height="70"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Content="Прорахувати"
                        x:Name="CalculateButton"
                        Click="CalculateButton_Click"/>
                <TextBlock VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           FontSize="20"
                           Margin="20 0 50 20"
                           Text="0,00" 
                           x:Name="GrandTotalTextBlock"/>
                <TextBlock VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           FontSize="14"
                           Margin="20"
                           Text="грн." />
            </Grid>
            
        </GroupBox>
    </Grid>
</Window>